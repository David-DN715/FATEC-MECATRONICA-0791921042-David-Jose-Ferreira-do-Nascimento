#na parte de receber dinheiro
def transferir (usuario, numero_da_conta, mudar):
  continuar = True
  while continuar:
    usuario = input("digite o nome de quem vai receber:\n")
    numero_da_conta = float(input("Qual a conta?\n"))
    mudar = "{};{}".format(usuario.uper(), numero_da_conta)
    if numero_da_conta == True:
      print(mudar)
    else:
      print("digite alguma conta valida!")
      return usuario, numero_da_conta, mudar

