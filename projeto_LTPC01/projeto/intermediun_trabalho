def pagamento (nome, numero_da_conta, valor, validacao):
 nome = input ("digite o nome a que transferir separado por ',':\n")
 numero_da_conta = input ("digite o numero da conta a quem transferir:\n")
 valor = input("digite o valor a transferir:\n")
 validacao = input("digite a validacao:\n")
 opcao = True
 while opcao:
  nome_validacao, numero_da_conta_validacao = validacao.split(';')
  if nome == nome_validacao and numero_da_conta == numero_da_conta_validacao:
    print ("dados validos!")
  else:
    print("Dados invalidos!")
    return nome, numero_da_conta, valor,validacao

def receber (quem, numero_da_conta, mudar):
  continuar == True
  while continuar:
    quem = input("digite o nome de quem vai receber:\n")
    numero_da_conta = float(input("Qual a conta?\n"))
    mudar = "{};{}".format(quem.uper(), numero_da_conta)
    if numero_da_conta == True:
      print(mudar)
    else:
      print("digite alguma conta valida!")
      return quem, numero_da_conta, mudar

