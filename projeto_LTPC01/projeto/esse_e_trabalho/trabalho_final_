# A função abaixo mostra o menu
def menu():
  print("1 - criar login")
  print("2 - formar a string de validacao")
  print("3 - para validar string no pagamento")

#a funcao abaixo permite verificar as contas existentes, porem só as que estão abaixo
def validacao (string_validacao):
  encontrei = False
  for conta  in string_validacao.split(";"):
    if conta == string_validacao:
     encontrei = True
    else:
      print("digite conta valida!")
      return encontrei


