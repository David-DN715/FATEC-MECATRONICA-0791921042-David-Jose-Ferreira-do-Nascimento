#Definida função criar novo login com conta:
def novo_login():
 contador_de_contas = 3 
 numero_da_conta = 3
 saldo = 0
 while contador_de_contas== 3: 
  nome = input("digite seu nome:")
  email = input("digite seu email:")
  senha = input("Crie aqui sua senha:")
  contador_de_contas = contador_de_contas+1
 if numero_da_conta <= 999:
  numero_da_conta = contador_de_contas
  return nome, email, senha, numero_da_conta, saldo

#A funçao abaixo verifica o login:
def logar(login001, login002, login003):
  encontrei = False
  for nome in logar.split(','):
    if nome == logar:
      encontrei = True
    return encontrei 

nome = input("Login:\t")
senha = input("Password:\t")

if logar (nome, senha) == True:
  print(logar)

else:
  print("dados invalidos!")
