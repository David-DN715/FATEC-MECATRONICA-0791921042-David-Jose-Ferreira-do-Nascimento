#Função mostrar login:
def mostrar_login(nome, email, senha, numero_da_conta):
  print("Name:", nome)
  print("email:", email)
  print("numero da conta:", numero_da_conta)

def login001 (nome, email, senha, numero_da_conta, saldo):
  nome = "David jose"
  email = "dvdjoseferreira@gmail.com"
  senha = "Ghost001"
  numero_da_conta = 1
  saldo = 0
  return nome, email, senha, numero_da_conta, saldo

