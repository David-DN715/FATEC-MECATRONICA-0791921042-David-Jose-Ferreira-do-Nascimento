   nome = input("digite o nome a quem transferir:\n")
   numero_da_conta = float(input("Qual a conta?\n"))
   validacao_da_transacao = input("Digite o codigo de validacao:\n")
   if validacao == True:
     print(validacao,(nome, numero_da_conta))
   else:
    print("Dados invalidos")
  if opcao == 2:
    continuar = True
    while continuar:
     quem = input("digite o nome de quem vai receber:\n")
