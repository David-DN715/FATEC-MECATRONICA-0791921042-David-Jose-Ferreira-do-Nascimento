def conta (nome, email, senha, saldo, numero_da_conta):
  print(nome)
  print(email)
  print(saldo)
  print(numero_da_conta)
  return nome, email, senha, saldo, numero_da_conta

def validacao (nome, validacao, numero_da_conta):
  nome_validacao, numero_da_conta_validacao = validacao.split(',')
  if nome == nome_validacao and numero_da_conta==numero_da_conta_validacao:
    print(conta)
  else:
    print("Dados invalidos!")
  return nome, validacao, numero_da_conta 

